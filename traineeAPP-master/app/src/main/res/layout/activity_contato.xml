<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bsi.mpoo.traineeufrpe.gui.main.gui.Contato.Contato"
    android:orientation="vertical"
    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#225386">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_foreground" />
            <TextView
                android:id="@+id/presentation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:textStyle="italic"
                android:textColor="#fff"
                android:text="@string/contato" />


        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <EditText
        android:id="@+id/editEmail3"
        style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
        android:layout_width="350dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextform"
        android:hint="Email"
        android:layout_marginTop="40dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/message"
        style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextform"
        android:ems="10"
        android:hint="Digite sua mensagem."
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:background="@color/colorPrimaryDark"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:text="Cancelar" />

        <Button
            android:id="@+id/send"
            android:background="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:text="Enviar" />
    </LinearLayout>


</LinearLayout>
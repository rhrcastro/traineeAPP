<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bsi.mpoo.traineeufrpe.gui.estagiario.gui.Login.LoginEstagiario"
    android:orientation="vertical"
    android:background="#00A6FF">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
            />
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />


    <EditText
        android:id="@+id/editEmail1"
        style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
        android:background="@drawable/edittextstyle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/editSenha1"
        style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
        android:background="@drawable/edittextstyle"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Senha"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/butlogin"
        android:background="@drawable/roundbutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="LOGAR"
        android:textColor="#00A6FF" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu sua senha?"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cadastroEmpregador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:tint="@color/colorPrimary"
        app:backgroundTint="#fff"
        app:srcCompat="@drawable/round_person_add_white_24" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".GUI.TelaPrincipal">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#225386">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:layout_width="397dp"
                android:layout_height="100dp"
                android:src="@drawable/logo" />


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainee"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha uma opção de usuário abaixo:"
            android:textSize="18dp"
            android:textColor="#bdbebd"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/butEstagiario"
            android:layout_height="wrap_content"
            android:text="Estagiário"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/butEmpregador"
            android:text="Empregador" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/contato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deseja falar conosco?"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/contato2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clique Aqui."
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center" />

        </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="bsi.mpoo.traineeufrpe.gui.estagiario.curriculo.ActCurriculo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#225386">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:layout_width="397dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_foreground" />


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/cadastroestagiario"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/editNomeCadastroEst"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:textColor="#fff"
                android:inputType="textPersonName"
                android:background="@drawable/edittextform"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/editEmailCadastroEst"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittextform" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPF:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/editCpf"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="number"
                android:textColor="#fff"
                android:background="@drawable/edittextform"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senha:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/editSenhaCadastro"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:padding="10dp"
                android:background="@drawable/edittextform"
                android:textSize="18dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repita sua senha:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/editConfirmaSenha"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:background="@drawable/edittextform"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade atual:"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#bdbebd"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/editCidade"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:textColor="#fff"
                android:inputType="textPersonName"
                android:background="@drawable/edittextform"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginTop="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:text="AvanÃ§ar"
                android:elevation="5dp"
                android:textColor="#fff"
                android:id="@+id/botCadastroPessoal"
                android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


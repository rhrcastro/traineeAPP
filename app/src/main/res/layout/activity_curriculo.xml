<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00A6FF"
    tools:context=".Curriculo">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    />


   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/logo"
               android:layout_width="336dp"
               android:layout_gravity="center"
               android:layout_height="42dp"
               android:layout_marginTop="96dp"
               app:srcCompat="@mipmap/ic_launcher_foreground" />

           <TextView
               android:id="@+id/cadastroest"
               android:layout_width="300dp"
               android:layout_height="27dp"
               android:layout_gravity="center"
               android:layout_marginTop="20sp"
               android:text="@string/cadastrocurriculo"
               android:textAlignment="center"
               android:textColor="#fff"
               android:textSize="20sp" />

           <TextView
               android:layout_width="230dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginTop="-10dp"
               android:background="@drawable/aroundtext" />

           <EditText
               android:id="@+id/editCurso"
               style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
               android:background="@drawable/edittextstyle"
               android:backgroundTint="@color/colorPrimary"
               android:layout_marginTop="20dp"
               android:layout_gravity="center"
               android:textColor="#FFF"
               android:textColorHint="#FFF"
               android:layout_width="350dp"
               android:textAlignment="center"
               android:layout_height="wrap_content"
               android:ems="10"
               android:hint="Curso"
               android:inputType="textPersonName" />

           <EditText
               android:id="@+id/editInstituicao"
               style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
               android:background="@drawable/edittextstyle"
               android:backgroundTint="@color/colorPrimary"
               android:layout_marginTop="20dp"
               android:layout_gravity="center"
               android:textColor="#FFF"
               android:textColorHint="#FFF"
               android:layout_width="350dp"
               android:textAlignment="center"
               android:layout_height="wrap_content"
               android:ems="10"
               android:hint="Instituição"
               android:inputType="textPersonName" />

           <EditText
               android:id="@+id/editSegmento"
               style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
               android:background="@drawable/edittextstyle"
               android:backgroundTint="@color/colorPrimary"
               android:layout_marginTop="20dp"
               android:layout_gravity="center"
               android:textColor="#FFF"
               android:textColorHint="#FFF"
               android:layout_width="350dp"
               android:textAlignment="center"
               android:layout_height="wrap_content"
               android:ems="10"
               android:hint="Segmento de Área"
               android:inputType="textPersonName" />

           <EditText
               android:id="@+id/editQualidades"
               style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
               android:background="@drawable/edittextstyle"
               android:backgroundTint="@color/colorPrimary"
               android:layout_marginTop="20dp"
               android:layout_gravity="center"
               android:textColor="#FFF"
               android:textColorHint="#FFF"
               android:layout_width="350dp"
               android:textAlignment="center"
               android:layout_height="wrap_content"
               android:ems="10"
               android:hint="Qualidades"
               android:inputType="textPersonName" />

           <Button
               android:id="@+id/cadastrar"
               android:background="@drawable/roundbutton"
               android:layout_width="200dp"
               android:layout_height="40dp"
               android:text="Cadastrar Curriculo"
               android:textColor="@color/colorPrimary"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="30dp"
               android:layout_gravity="center"/>


       </LinearLayout>
   </ScrollView>


</android.support.constraint.ConstraintLayout>
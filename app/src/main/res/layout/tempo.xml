<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/nome_candidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:text="TÃ­tulo da Vaga"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_candidato"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:text="Nome da Empresa"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/campo_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensagem"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:text="Publicada em:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/data_vaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensagem"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/campo_horario"
        android:paddingTop="3dp"
        android:text="###"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/bolsa_vaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensagem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="3dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="A combinar"
        android:textColor="#2ed573"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/status_vaga"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/aberta_v" />

</RelativeLayout>

